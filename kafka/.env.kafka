# Broker
KAFKA_BROKER_ID=1
KAFKA_CFG_ZOOKEEPER_CONNECT=zookeeper:2181

# Two listeners: internal for containers, external for host
KAFKA_CFG_LISTENERS=INTERNAL://:9092,EXTERNAL://:9093
KAFKA_CFG_ADVERTISED_LISTENERS=INTERNAL://kafka:9092,EXTERNAL://localhost:9092
KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=INTERNAL:PLAINTEXT,EXTERNAL:PLAINTEXT
KAFKA_CFG_INTER_BROKER_LISTENER_NAME=INTERNAL
ALLOW_PLAINTEXT_LISTENER=yes

# Topics (format: name:partitions:replication,name2:..., without spaces)
KAFKA_INIT_TOPICS="analysis_requested:1:1,analysis.results:1:1"
# timeouts/retries for init
KAFKA_INIT_MAX_ATTEMPTS=30
KAFKA_INIT_SLEEP_SEC=2